<div class = "wrapper-center post-index-wrapper">
  <div class = "container">
   <% @posts.each do |post| %>
    <div class = "row post-index-row">
      <div class = "col-md-6 col-md-offset-3">
        <p>作成ユーザ<%= post.user_id %></p>
        <p>
          <%= link_to post_path(id: post.id) do %>
          <%= post.title %>
          <% end %>
        </p>
        <p class = "image-control">
          <% if post.image? %>
           <%= image_tag post.image.url %>
          <% end %>
        </p>
        <p>作成時間 <%= post.created_at %></p>
        <p>最終更新時間 <%= post.updated_at %></p>
        <P>対応状態 <%= post.status %></P>
      </div>
    </div>
    <% end %>
  </div>
</div>