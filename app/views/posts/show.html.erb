<div class = "wrapper-center post-show-wrapper">
  <div class = "container" >
    <div class = "row">
       <div class = "col-md-offset-2 col-md-8">
        <h1 class = "form-title text-blue">トラブル内容を作成</h1>
          <%= form_for @post do |f|%>
          <div class = "form-group">
          <%= f.label :title, "トラブルの要約", class: "text-black" %>
          <%= f.text_field :title, @post.title %>
          </div>
          <div class = "form-group">
          <%= f.label :content, "トラブルの詳細", class: "text-black" %>
          <%= f.text_area :content, @post.content %>
          </div>
          
          <div class = "form-group">
          <% if @post.image %>
          <%= f.label :image, "写真" %>
          <%= f.file_field :image %>
          <% end %>
          </div>

          
         <% end %>  
       </div>
    </div>
  </div>
</div>