<div class = "wrapper-center login-wrapper ">
<div class = "container" >
    <div class = "row">
       <div class = "col-md-offset-2 col-md-8">
        <h1 class = "form-title text-blue">Log In</h1>
          <%= form_for :session, url: login_path do |f|%>
          <div class = "form-group">
          <%= f.label :email, "メールアドレス", class: "text-black" %>
          <%= f.text_area :email, class: "form_control" %>
          </div>
          <div class = "form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form_control" %>
          </div>
          <%= f.submit 'ログインする', class: "btn btn-blue"%>
         <% end %>  
       </div>
    </div>
  </div>
</div>
</div>